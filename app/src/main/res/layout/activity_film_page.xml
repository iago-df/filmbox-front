<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/ivBackdrop"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="#333" />

            <ImageView
                android:id="@+id/ivPoster"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivBackdrop"
                tools:background="#000" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="There Will Be Blood"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/ivPoster"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivBackdrop" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="2007 • DIRECTED BY\nPaul Thomas Anderson"
                android:textColor="@android:color/darker_gray"
                app:layout_constraintEnd_toStartOf="@id/ivPoster"
                app:layout_constraintStart_toStartOf="@id/tvTitle"
                app:layout_constraintTop_toBottomOf="@id/tvTitle" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTrailer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="#808080"
                android:text="TRAILER"
                app:cornerRadius="20dp"
                app:icon="@android:drawable/ic_media_play"
                app:layout_constraintStart_toStartOf="@id/tvTitle"
                app:layout_constraintTop_toBottomOf="@id/tvSubtitle" />

            <TextView
                android:id="@+id/tvSynopsis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="Esta es una película de Paul Thomas Anderson, director reconocido por sus planos largos y narrativas complejas..."
                android:textColor="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivPoster" />

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#E0E0E0"
                app:layout_constraintTop_toBottomOf="@id/tvSynopsis" />

            <TextView
                android:id="@+id/tvRatingsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="RATINGS"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider1" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:numStars="5"
                android:rating="3"
                android:theme="@style/Widget.AppCompat.RatingBar.Indicator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRatingsHeader" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="3.0"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/ratingBar"
                app:layout_constraintStart_toEndOf="@id/ratingBar"
                app:layout_constraintTop_toTopOf="@id/ratingBar" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#E0E0E0"
                app:layout_constraintTop_toBottomOf="@id/ratingBar" />

            <TextView
                android:id="@+id/tvDondeVerLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="DONDE VER"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:rotation="90"
                android:src="@android:drawable/ic_media_play"
                app:layout_constraintBottom_toBottomOf="@id/tvDondeVerLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvDondeVerLabel"
                app:tint="@android:color/darker_gray" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                app:layout_constraintTop_toBottomOf="@id/tvDondeVerLabel" />

            <LinearLayout
                android:id="@+id/actionButtonsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/divider3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnActionVista"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="VISTA"
                    android:textSize="10sp"
                    app:backgroundTint="#28A745"
                    app:cornerRadius="8dp"
                    app:icon="@android:drawable/ic_menu_view"
                    app:iconGravity="textTop"
                    app:iconSize="32dp"
                    app:iconTint="@android:color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnActionWatchlist"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="WATCHLIST"
                    android:textSize="10sp"
                    app:backgroundTint="#007BFF"
                    app:cornerRadius="8dp"
                    app:icon="@android:drawable/ic_menu_save"
                    app:iconGravity="textTop"
                    app:iconSize="32dp"
                    app:iconTint="@android:color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnActionFavorites"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="FAVORITAS"
                    android:textSize="10sp"
                    app:backgroundTint="#DC3545"
                    app:cornerRadius="8dp"
                    app:icon="@android:drawable/btn_star_big_on"
                    app:iconGravity="textTop"
                    app:iconSize="32dp"
                    app:iconTint="@android:color/white" />
            </LinearLayout>

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                app:layout_constraintTop_toBottomOf="@id/actionButtonsContainer" />

            <TextView
                android:id="@+id/tvReviewsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="REVIEWS"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider4" />

            <ImageView
                android:id="@+id/ivMyAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@android:drawable/sym_def_app_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvReviewsHeader"
                app:tint="@android:color/black" />

            <TextView
                android:id="@+id/tvWriteReviewHint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Escribe tu review:"
                android:textColor="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivMyAvatar"
                app:layout_constraintTop_toTopOf="@id/ivMyAvatar" />

            <View
                android:id="@+id/line1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:background="#E0E0E0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvWriteReviewHint"
                app:layout_constraintTop_toBottomOf="@id/tvWriteReviewHint" />

            <View
                android:id="@+id/line2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#E0E0E0"
                app:layout_constraintEnd_toEndOf="@id/line1"
                app:layout_constraintStart_toStartOf="@id/line1"
                app:layout_constraintTop_toBottomOf="@id/line1" />

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#E0E0E0"
                app:layout_constraintTop_toBottomOf="@id/line2" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reviewPaco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="16dp"
                app:layout_constraintTop_toBottomOf="@id/divider5">

                <ImageView
                    android:id="@+id/ivAvatarPaco"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:src="@android:drawable/sym_def_app_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@android:color/black" />

                <TextView
                    android:id="@+id/tvUsernamePaco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Paco"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/ivAvatarPaco"
                    app:layout_constraintTop_toTopOf="@id/ivAvatarPaco" />

                <RatingBar
                    android:id="@+id/rbPaco"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:numStars="5"
                    android:rating="3"
                    app:layout_constraintBottom_toBottomOf="@id/tvUsernamePaco"
                    app:layout_constraintEnd_toStartOf="@+id/tvRatingNumPaco"
                    app:layout_constraintTop_toTopOf="@id/tvUsernamePaco" />

                <TextView
                    android:id="@+id/tvRatingNumPaco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="3.0"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/tvUsernamePaco"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvUsernamePaco" />

                <TextView
                    android:id="@+id/tvReviewTextPaco"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="La pelicula es una mierda, pero le voy a dar 3 estrellas..."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tvUsernamePaco"
                    app:layout_constraintTop_toBottomOf="@id/tvUsernamePaco" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:background="#E0E0E0"
                app:layout_constraintTop_toBottomOf="@id/reviewPaco" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reviewJose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="16dp"
                app:layout_constraintTop_toBottomOf="@id/divider6">

                <ImageView
                    android:id="@+id/ivAvatarJose"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:src="@android:drawable/sym_def_app_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@android:color/black" />

                <TextView
                    android:id="@+id/tvUsernameJose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Jose"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/ivAvatarJose"
                    app:layout_constraintTop_toTopOf="@id/ivAvatarJose" />

                <RatingBar
                    android:id="@+id/rbJose"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:numStars="5"
                    android:rating="3"
                    app:layout_constraintBottom_toBottomOf="@id/tvUsernameJose"
                    app:layout_constraintEnd_toStartOf="@+id/tvRatingNumJose"
                    app:layout_constraintTop_toTopOf="@id/tvUsernameJose" />

                <TextView
                    android:id="@+id/tvRatingNumJose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="3.0"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/tvUsernameJose"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvUsernameJose" />

                <TextView
                    android:id="@+id/tvReviewTextJose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="La pelicula es una locura, pero le voy a dar 3 estrellas..."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tvUsernameJose"
                    app:layout_constraintTop_toBottomOf="@id/tvUsernameJose" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/dividerFinal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                app:layout_constraintTop_toBottomOf="@id/reviewJose" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAllReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="20dp"
                android:text="ALL REVIEWS"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dividerFinal" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="110dp"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="unlabeled"
        android:background="@android:color/white"

        app:itemIconSize="34dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        app:itemIconTint="@null"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>