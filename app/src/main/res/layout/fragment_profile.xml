<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAFAFA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- PERFIL -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/username_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Usuario"
                android:textSize="26sp"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/fixed_black"
                app:layout_constraintTop_toTopOf="@id/profile_image"
                app:layout_constraintBottom_toBottomOf="@id/profile_image"
                app:layout_constraintStart_toEndOf="@id/profile_image"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- VISTAS -->
        <LinearLayout
            android:id="@+id/watched_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:gravity="bottom"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/profile_container"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvWatchedTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Películas Vistas"
                android:textSize="22sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/fixed_black"/>

            <ImageView
                android:id="@+id/watched_arrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_go"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/watched_recycler"
            android:layout_width="0dp"
            android:layout_height="190dp"
            android:paddingTop="2dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:scrollbars="horizontal"
            app:layout_constraintTop_toBottomOf="@id/watched_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- FAVORITAS -->
        <LinearLayout
            android:id="@+id/favorites_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:gravity="bottom"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/watched_recycler"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvFavoritesTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Películas Favoritas"
                android:textSize="22sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/fixed_black"/>

            <ImageView
                android:id="@+id/favorites_arrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_go"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/favorites_recycler"
            android:layout_width="0dp"
            android:layout_height="190dp"
            android:paddingTop="2dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:scrollbars="horizontal"
            app:layout_constraintTop_toBottomOf="@id/favorites_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- WISHLIST -->
        <LinearLayout
            android:id="@+id/wishlist_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:gravity="bottom"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/favorites_recycler"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvWishlistTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wishlist"
                android:textSize="22sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/fixed_black"/>

            <ImageView
                android:id="@+id/wishlist_arrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_go"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wishlist_recycler"
            android:layout_width="0dp"
            android:layout_height="190dp"
            android:paddingTop="2dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:scrollbars="horizontal"
            app:layout_constraintTop_toBottomOf="@id/wishlist_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- LOGOUT -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/logout_button"
            android:layout_width="221dp"
            android:layout_height="75dp"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:text="CERRAR SESIÓN"
            android:textAllCaps="false"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/fixed_white"
            app:backgroundTint="@android:color/black"
            app:cornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@id/wishlist_recycler"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
